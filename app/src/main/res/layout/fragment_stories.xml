<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoriesFragment">

    <TextView
        android:id="@+id/story1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/teal_200"
        android:text="PLACEHOLDER FOR STORY!!PLACEHOLDER FOR STORY!!"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/story2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/story2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:background="@color/teal_200"
        android:text="PLACEHOLDER FOR STORY!!PLACEHOLDER FOR STORY!!"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/story1" />

</androidx.constraintlayout.widget.ConstraintLayout>